#trim TCRBOA7-T-WGS.lane1.read1.fastq.gz "-e 0.1"
#trim TCRBOA7-T-WGS.lane2.read1.fastq.gz "-e 0.6"
trim TCRBOA7-T-WGS.lane3.read1.fastq.gz "-e 1.0"
