#! /bin/bash

source variables

mkdir -p FASTQ_Trimmed

function trim {
  f="$1"
  args="$2"

  reportFile=FASTQ_Diagnostics/${f/\.read1\.fastq\.gz}.trim

  if [ ! -f $reportFile ]
  then
    docker run \
      -v $(pwd)/FASTQ:/data/input_data \
      -v $(pwd)/FASTQ_Trimmed:/data/output_data \
      --user $(id -u):$(id -g) \
      --rm \
      srp33/somatic_wgs:$tag \
      trim_fastq \
        -i1 $f \
        -i2 ${f/read1/read2} \
        -o1 $f \
        -o2 ${f/read1/read2} \
        --args " -q 20 -Q 20 --minimum-length 40 -T 18 $args" > $reportFile
  fi
}

